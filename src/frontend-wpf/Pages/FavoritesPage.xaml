<Page x:Class="Laendlefinder.Pages.FavoritesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Laendlefinder.Pages"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d"
      Title="FavoritesPage" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.RowSpan="2" HorizontalAlignment="Left" Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}" Width="140">
            <!-- SVG Icon Button -->
            <Button Background="Transparent" BorderThickness="0" Margin="0,20,0,20" HorizontalAlignment="Center">
                <svgc:SvgViewbox Width="36" Height="36"
                                 Source="/Assets/Kalender.svg"
                                 Stretch="Uniform"/>
            </Button>

            <!-- Navigation Buttons -->
            <Button Content="Home" Click="HomeButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Entdecken" Click="ExploreButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Kalender" Click="CalndarButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Favoriten" Click="FavsButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Map" Click="MapButton_Click" Style="{StaticResource SidebarButtonStyle}"/>

            <!-- Bottom Spacer -->
            <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                <Button Content="Profil" Click="ProfileButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0, 10, 0, 10">
                <TextBlock Text="Deine Favoriten" FontSize="24" FontWeight="Bold"/>
            </StackPanel>
            <ScrollViewer Grid.Row="1" Margin="0,0,0,0" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="EventsPanel" Orientation="Horizontal" ItemWidth="325" ItemHeight="200"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
