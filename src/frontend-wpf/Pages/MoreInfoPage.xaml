<Page x:Class="Laendlefinder.Pages.MoreInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Laendlefinder.Pages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d"
      Title="MoreInfoPage">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.07*"/>
            <ColumnDefinition Width="0.93*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.RowSpan="2" HorizontalAlignment="Stretch" Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="*"/>    
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" Grid.Row="0" Margin="0,8,0,15">
                <Image Source="../images/WhiteLogo.png" Height="70" Width="55"></Image>
            </Button>

            <StackPanel Grid.Row="1">
                <Button Content="Home" Click="HomeButton_Click" Style="{StaticResource SidebarButtonStyle}" Background="#245C33"/>
                <Button Content="Entdecken" Click="ExploreButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Kalender" Click="CalndarButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Favoriten" Click="FavsButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Map" Click="MapButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>

            <Button Content="Profil" Click="ProfileButton_Click" Style="{StaticResource SidebarButtonStyle}" Grid.Row="2" Margin="0,20,0,10" />

        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Inhalt -->
            <Grid Grid.Row="0" Grid.Column="0" Margin="25,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Bild -->
                    <RowDefinition Height="*"/>   <!-- Restlicher Inhalt -->
                </Grid.RowDefinitions>

                <!-- Bild oben Ã¼ber volle Breite -->
                <Rectangle x:Name="EventImage" Grid.Row="0" Fill="LightGray" RadiusX="10" RadiusY="10" Height="130" HorizontalAlignment="Stretch" Grid.ColumnSpan="2"/>

                <!-- Zwei Spalten darunter -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Linke Spalte: Infos -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,20,20,0">
                        <Label x:Name="NameLabel" Content="Langer Titel" FontSize="30" FontFamily="{StaticResource OpenSansBold}" FontWeight="Bold" Padding="0" Margin="0,0,0,10"/>
                        <TextBlock FontSize="20" FontWeight="Bold" Text="Datum und Uhrzeit" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Image Source="../images/calendar.png" Height="20" Width="20" Margin="0,0,5,0"/>
                            <TextBlock x:Name="DateText" Text="Datum" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Image Source="../images/clock.png" Height="20" Width="20" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TimeText" Text="Uhrzeit" FontSize="16"/>
                        </StackPanel>
                        <TextBlock FontSize="20" FontWeight="Bold" Text="Location" Margin="0,20,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Image Source="../images/location.png" Height="20" Width="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Ort" FontSize="16" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Rechte Spalte: Beschreibung + Google Map -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="20,20,0,0">
                        <TextBlock FontSize="20" FontWeight="Bold" Text="Event Description" Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                            <Run x:Name="DescriptionText" Text="Beschreibung"/>
                        </TextBlock>
                        <WebBrowser x:Name="GoogleMapBrowser" Height="300" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
