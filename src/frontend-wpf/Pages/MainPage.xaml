<Page x:Class="Laendlefinder.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Laendlefinder.Pages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d"
      Title="MainPage">
   
   <Grid>
       <Grid.ColumnDefinitions>
           <ColumnDefinition Width="0.12*"/>
           <ColumnDefinition Width="0.88*"/>
       </Grid.ColumnDefinitions>
        
       <Grid Grid.RowSpan="2" HorizontalAlignment="Stretch" Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
           <Grid.RowDefinitions>
               <RowDefinition Height="Auto"/> 
               <RowDefinition Height="*"/>    
               <RowDefinition Height="Auto"/>
           </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Button Content="Icon" Margin="10" Padding="10" HorizontalAlignment="Stretch" Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Home" Margin="10" Padding="10" HorizontalAlignment="Stretch" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Entdecken" Margin="10" Padding="10" HorizontalAlignment="Stretch" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Kalender" Margin="10" Padding="10" HorizontalAlignment="Stretch" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Favoriten" Margin="10" Padding="10" HorizontalAlignment="Stretch" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Map" Margin="10" Padding="10" HorizontalAlignment="Stretch" Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>

           <Button Content="Profil" Click="ProfileButton_Click" Style="{StaticResource SidebarButtonStyle}" Grid.Row="2" Margin="0,20,0,10" />

       </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
                <TextBlock Text="Was geht ab in Vorarlberg?" FontSize="24" FontWeight="Bold"/>
                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <xctk:WatermarkTextBox Grid.Column="0" Padding="10" Watermark="Suche Events, Kategorien, Orte"/>
                    <ComboBox Grid.Column="1" Margin="10,0,0,0" Width="120">
                        <ComboBoxItem Content="Vorarlberg"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
            
            <ScrollViewer Grid.Row="2" Margin="10" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="EventsPanel" Orientation="Horizontal" ItemWidth="325" ItemHeight="200" Width="720"/>
            </ScrollViewer>
        </Grid>
    </Grid>

</Page>
