<UserControl x:Class="Laendlefinder.Collections.EventCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Laendlefinder.Collections"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="300">
<Border CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Padding="10" Background="#F8F8F8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="Shake Clubbing" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                
                <Border Background="#EDEDED" Height="60" CornerRadius="5">
                    <Grid>
                        <Button Content="★"
                                Width="24" Height="24"
                                FontSize="14"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,5,5,0"
                                Cursor="Hand"
                                Click="Favbutton_Click"/>
                    </Grid>
                </Border>
            </StackPanel>
            
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="Unterhaltung" FontSize="12" Padding="5,2"
                        Background="#EEE" BorderBrush="#CCC" BorderThickness="1"
                        Margin="0,0,0,10" />
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="25.Mai" FontWeight="Bold" FontSize="16" />
                    <TextBlock Text="Sa, 20:00 Uhr" FontSize="12" />
                </StackPanel>
                <Button Content="Mehr Infos" FontSize="12" Padding="5,2"
                        Background="#FFF" BorderBrush="#CCC" BorderThickness="1"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
