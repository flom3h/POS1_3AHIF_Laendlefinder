<UserControl x:Class="Laendlefinder.UserControlls.EventMiniViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Laendlefinder.UserControlls"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="325">
    <Grid Background="Transparent">
        <Rectangle Fill="White" RadiusX="10" RadiusY="10" Margin="10" Stroke="Gray" StrokeThickness="2"/>
        <StackPanel Margin="20" Orientation="Horizontal">
            <StackPanel>
                <Label x:Name="NameLabel" Content="Langer Titel" FontSize="16" FontWeight="Bold" Padding="0" Margin="0,0,0,10" Width="185"/>
                <Grid>
                    <Rectangle x:Name="ImagePlaceholder" Fill="LightGray" RadiusX="10" RadiusY="10" Width="185" Height="130"/>
                    <Border CornerRadius="10" Width="185" Height="130" Background="Transparent">
                        <Image x:Name="EventImage" Width="185" Height="130" Stretch="UniformToFill">
                            <Image.Clip>
                                <RectangleGeometry Rect="0,0,185,130" RadiusX="10" RadiusY="10"/>
                            </Image.Clip>
                        </Image>
                    </Border>
                    <Button x:Name="FavButton" Width="20" Height="20" Style="{StaticResource FavButtonStyle}" Margin="0,5,5,0" HorizontalAlignment="Right" Background="Black" Foreground="White" Click="FavButton_OnClick" VerticalAlignment="Top" Content="â˜…"/>
                </Grid>
            </StackPanel>
            <StackPanel Margin="10,0,0,0">
                <Button x:Name="TypeButton" IsHitTestVisible="False" Cursor="Arrow" Style="{StaticResource EventMiniViewButtonStyle}" Content="Kategorie" Margin="0,0,0,35"/>
                <Label x:Name="DateLabel" Content="Datum" FontSize="16" FontWeight="Bold" Padding="0" Margin="0,0,0,10"/>
                <Label x:Name="TimeLabel" Content="Uhrzeit" FontSize="13" Padding="0" Margin="0,0,0,0"/>
                <Button x:Name="MoreButton" Style="{StaticResource EventMiniViewButtonStyle}" Content="Mehr Infos" Click="MoreButton_OnClick" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
