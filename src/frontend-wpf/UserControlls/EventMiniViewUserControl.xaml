                                    Fill="Black"
                                    />
                            </Viewbox>
                        </Button.Content>
                    </Button>               
                </Grid>
            </StackPanel>
            <StackPanel Margin="10,0,0,0">
                <Button x:Name="TypeButton" IsHitTestVisible="False" Cursor="Arrow" Style="{StaticResource EventMiniViewButtonStyle}" Content="Kategorie" Margin="0,0,0,35"/>
                <Label x:Name="DateLabel" Content="Datum" FontSize="16" FontWeight="Bold" Padding="0" Margin="0,0,0,10"/>
                <Label x:Name="TimeLabel" Content="Uhrzeit" FontSize="13" Padding="0" Margin="0,0,0,0"/>
                <Button x:Name="MoreButton" Style="{StaticResource EventMiniViewButtonStyle}" Content="Mehr Infos" Click="MoreButton_OnClick" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
