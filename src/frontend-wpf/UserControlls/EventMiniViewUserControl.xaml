                    <Rectangle x:Name="ImagePlaceholder" Fill="LightGray" RadiusX="10" RadiusY="10" Width="185" Height="130"/>
                    <Border CornerRadius="10" Width="185" Height="130" Background="Transparent">
                        <Image x:Name="EventImage" Width="185" Height="130" Stretch="UniformToFill">
                            <Image.Clip>
                                <RectangleGeometry Rect="0,0,185,130" RadiusX="10" RadiusY="10"/>
                            </Image.Clip>
                        </Image>
                    </Border>
                    <Button x:Name="FavButton" Width="20" Height="20" Style="{StaticResource FavButtonStyle}" Margin="0,5,5,0" HorizontalAlignment="Right" Foreground="White" Click="FavButton_OnClick" VerticalAlignment="Top">
                        <Button.Content>
                            <Viewbox Width="13" Height="13" Stretch="Uniform" Margin="0,-1,0,0">
