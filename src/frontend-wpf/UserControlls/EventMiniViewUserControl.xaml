<UserControl x:Class="Laendlefinder.UserControlls.EventMiniViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Laendlefinder.UserControlls"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid Background="Transparent">
        <Rectangle Fill="White" RadiusX="10" RadiusY="10" Margin="10" Stroke="Gray" StrokeThickness="2"/>
        <StackPanel Margin="20" Orientation="Horizontal">
            <StackPanel>
                <Label Content="Langer Titel" Padding="0" Margin="0,0,0,10"/>
                <Grid>
                    <Rectangle Fill="Gray" Width="170" Height="130"/>
                    <Button x:Name="FavButton" Width="20" Height="20" Style="{StaticResource FavButtonStyle}" Margin="0,5,5,0" HorizontalAlignment="Right" VerticalAlignment="Top" Content="â˜…"/>
                </Grid>
            </StackPanel>
            <StackPanel Margin="10,0,0,0">
                <Button IsHitTestVisible="False" Cursor="Arrow" Style="{StaticResource EventMiniViewButtonStyle}" Content="Kategorie" Margin="0,0,0,35"/>
                <Label Content="Datum" FontSize="16" FontWeight="Bold" Padding="0" Margin="0,0,0,10"/>
                <Label Content="Uhrzeit" FontSize="13" Padding="0" Margin="0,0,0,0"/>
                <Button x:Name="MoreButton" Style="{StaticResource EventMiniViewButtonStyle}" Content="Mehr Infos" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
